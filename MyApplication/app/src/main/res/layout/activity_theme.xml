<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09475C"
    tools:context="nougatteam.myapplication.theme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="0dp"
                android:layout_height="35sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/home_icon"
                android:tint="#EBC153"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="35sp"
                android:text="Nougat Quizz"
                android:textColor="#EBC153"
                android:textStyle="bold|italic"></TextView>

            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="0dp"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/settings_work_tool_yellow"
                android:tint="#EBC153" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_game_theme_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="#EBC153"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Choisis ton thÃ¨me !"></TextView>

        <Button
            android:id="@+id/activity_game_theme1_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="#EBC153"
            android:background="#09475C"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:text="En attente"/>

        <Button
            android:id="@+id/activity_game_theme2_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="#EBC153"
            android:background="#09475C"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:text="Du"/>

        <Button
            android:id="@+id/activity_game_theme3_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="#EBC153"
            android:background="#09475C"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:text="Serveur"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
